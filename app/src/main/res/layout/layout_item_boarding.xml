<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBlueBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgWeather"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="64dp"
        tools:src="@drawable/img_weather_sunny_large"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgIndicatorOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_dots_selected"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgIndicatorTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_dots_unselected"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgIndicatorThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_dots_unselected"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/archivo_black"
        android:textSize="18sp"
        android:layout_marginTop="64dp"
        android:layout_gravity="center"
        tools:text="WEATHER FOR EACH CITY"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="@color/colorGrayBackground">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:src="@drawable/ic_arrow"/>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>